<!-- drawable/numeric.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-2dp"
        android:left="1dp"
        android:right="-2dp"
        android:top="1dp">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#334d00" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#46c38d"
                android:endColor="#296342"
                android:centerColor="#3a8867"/>
            <stroke
                android:width="2.1dp"
                android:color="#B18904" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="3dp"
        android:right="5dp"
        android:top="3dp">
        <inset
            android:drawable="@drawable/ic_iwillnot" />
    </item>
</layer-list>